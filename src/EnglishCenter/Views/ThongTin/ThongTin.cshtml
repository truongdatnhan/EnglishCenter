@model ThongTinViewModel

@{
    ViewData["Title"] = "Thông tin thí sinh";
    var name = Model.ThamGiaDuThi == null ? "Chưa xếp phòng thi" : Model.ThamGiaDuThi.MaPhongThi;
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}
<div class="main-body">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="/img/user.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                        <div class="mt-3">
                            <h4>@Model.ThiSinh.CMND</h4>
                            <p class="text-secondary mb-1">@Model.ThiSinh.HoTen</p>
                            <p class="text-muted font-size-sm">@Model.ThiSinh.SDT</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Họ tên</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input disabled type="text" class="form-control" value="@Model.ThiSinh.HoTen">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input disabled type="text" class="form-control" value="@Model.ThiSinh.Email">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Phone</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input disabled type="text" class="form-control" value="@Model.ThiSinh.SDT">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Số báo danh</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input disabled type="text" class="form-control" value="@Model.SoBaoDanh.SBD">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Phòng thi</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input disabled type="text" class="form-control" value="@name">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            @{
                                if (Model.ThamGiaDuThi == null || Model.ThamGiaDuThi.Nghe == null || Model.ThamGiaDuThi.Noi == null || Model.ThamGiaDuThi.Doc == null || Model.ThamGiaDuThi.Viet == null )
                                {
                                    <h5 class="d-flex align-items-center mb-3">Chưa có điểm !</h5>
                                }
                                else
                                {
                                    var nghe = Model.ThamGiaDuThi.Nghe * 10;
                                    var noi = Model.ThamGiaDuThi.Noi * 10;
                                    var doc = Model.ThamGiaDuThi.Doc * 10;
                                    var viet = Model.ThamGiaDuThi.Viet * 10;
                                    <h5 class="d-flex align-items-center mb-3">Điểm</h5>
                                    <p>Nghe: @Model.ThamGiaDuThi.Nghe</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @nghe%" aria-valuenow="@nghe" aria-valuemin="0" aria-valuemax="10"></div>
                                    </div>
                                    <p>Nói: @Model.ThamGiaDuThi.Noi</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: @noi%" aria-valuenow="@noi" aria-valuemin="0" aria-valuemax="10"></div>
                                    </div>
                                    <p>Đọc: @Model.ThamGiaDuThi.Doc</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @doc%" aria-valuenow="@doc" aria-valuemin="0" aria-valuemax="10"></div>
                                    </div>
                                    <p>Viết: @Model.ThamGiaDuThi.Viet</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: @viet%" aria-valuenow="@viet" aria-valuemin="0" aria-valuemax="10"></div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>